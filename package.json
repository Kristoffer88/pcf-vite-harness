{
  "name": "pcf-vite-harness",
  "version": "1.0.0",
  "description": "Modern Vite-based development harness for PowerApps Component Framework (PCF) with hot module replacement and PowerApps-like environment simulation",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.js"
    },
    "./styles/*": "./dist/styles/*",
    "./templates/*": "./dist/templates/*"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "pcf",
    "powerapps",
    "component-framework",
    "vite",
    "hmr",
    "hot-reload",
    "development",
    "harness",
    "powerplatform",
    "dataverse",
    "react",
    "typescript"
  ],
  "author": "kristoffer88",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kristoffer88/pcf-vite-harness"
  },
  "bugs": {
    "url": "https://github.com/kristoffer88/pcf-vite-harness/issues"
  },
  "homepage": "https://github.com/kristoffer88/pcf-vite-harness#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "vite": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "vite": {
      "optional": false
    }
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.6.0"
  },
  "optionalDependencies": {
    "dataverse-utilities": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/node": "^24.0.14",
    "@types/powerapps-component-framework": "^1.3.18",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "tsup": "^8.3.5",
    "typescript": "^5.8.3"
  }
}
